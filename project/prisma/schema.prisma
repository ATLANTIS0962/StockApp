generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url = "postgresql://bch:admin@localhost:5432/stockdb"
}

model Article {
  id                  String   @id @default(uuid())
  reference           String
  designation         String
  description         String
  quantiteInitiale    Int
  quantiteActuelle    Int
  seuilCritique       Int
  dateCreation        DateTime
  derniereModification DateTime
}

model BonAttribution {
  id            String   @id @default(uuid())
  numerobon     String
  articles      Json
  destinataire  String
  dateAttribution DateTime
  utilisateur   String
  statut        String
}

model Mouvement {
  id          String   @id @default(uuid())
  articleId   String
  type        String
  quantite    Int
  date        DateTime
  reference   String
  utilisateur String
  commentaire String?
}

model Utilisateur {
  id                      String   @id @default(uuid())
  nom                     String
  prenom                  String
  email                   String   @unique
  motDePasse              String
  role                    String
  actif                   Boolean
  dateCreation            DateTime
  derniereConnexion       DateTime?
  doitChangerMotDePasse   Boolean
}

model AlerteStock {
  articleId        String   @id
  designation      String
  quantiteActuelle Int
  seuilCritique    Int
  niveau           String
}
